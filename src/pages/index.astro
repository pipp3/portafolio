---

import Menu from "../components/Menu.astro"
const Card="div"
const Content= "content"
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Portafolio</title>
	</head>
	<body>

		
		<Menu/>
		<div class="absolute w-full min-h-screen">
			<div class="absolute z-0 top-0 w-full h-1/2 bg-cover bg-bottom pt-20 px-12 bg-gradient-to-r from-cyan-300 to-blue-600">

			</div>
		</div>
		<Card class="relative z-10 flex min-h-screen h-auto justify-center items-center">
			<Content class="relative z-20 bg-white md:flex p-12 shadow-lg rounded-lg w-full max-w-4xl">
				<div class="sm:flex-col py-1 md:pr-10">
					<h2 class="text-lg mb-3">Hola, mi nombre es</h2>
					<h1 class="text-5xl font-bold text-gray-800 mb-6">Felipe Munoz</h1>
					<p class="text-xl">
						Full-stack web developer who craft great website.
					</p>
				</div>
				<img src="images/me.jpg" alt="image" class="flex-shrink-0 w-80 rounded-full border-6 border-white shadow-md">
			</Content>
		</Card>

	</body>

</html>
